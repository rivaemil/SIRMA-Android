<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SIRMAAndroid" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Tipografía global -->
        <item name="android:fontFamily">sans-serif</item>

        <!-- Colores base (usaremos tintes directos en los widgets) -->
        <item name="colorPrimary">@color/brand_red</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Textos -->
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Botón rojo principal -->
    <style name="SirmaPrimaryButton" parent="Widget.Material3.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="backgroundTint">@color/brand_red</item>
        <item name="rippleColor">@color/brand_red_pressed</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <!-- Título de la tarjeta -->
    <style name="SirmaTitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- Estilo para TextInputLayout relleno -->
    <style name="SirmaFilledTextField" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/input_bg</item>
        <item name="boxStrokeColor">@color/stroke_dim</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1.5dp</item>
        <item name="hintTextColor">@color/hint_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Medium</item>
    </style>

    <style name="SirmaEditText" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>