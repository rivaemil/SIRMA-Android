<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Necesaria para Retrofit -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Borra estas dos si no lees/escribes archivos fuera de tu app (en Android 11+ ya están
         deprecados). Déjalas sólo si realmente las usas. -->
    <!-- <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> -->
    <!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SIRMAAndroid"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <!-- Login: pantalla inicial -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SIRMAAndroid">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Lista de citas -->
        <activity
            android:name=".appointments.AppointmentsActivity"
            android:exported="false"
            android:theme="@style/Theme.SIRMAAndroid" />

        <!-- Si la conservas para lógica futura, que no sea launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.SIRMAAndroid" />
    </application>
</manifest>
